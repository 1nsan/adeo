%h1 Listing items

%table
  %thead
    %tr
      %th Name
      %th Image url
      %th Prix
      %th Description
      %th Style
      %th Img link
      %th Color
      %th Material
      %th
      %th
      %th
      
  %tbody
    - @items.each do |item|
      %tr
        %td= item.name
        %td= item.image_url
        %td= item.prix
        %td= item.description
        %td= item.style
        %td= item.img_link
        %td= item.color
        %td= item.material
        %td= link_to 'Show', item
        %td= link_to 'Edit', edit_item_path(item)
        %td= link_to 'Destroy', item, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Item', new_item_path
